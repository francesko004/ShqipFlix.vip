// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String          @id @default(cuid())
  username      String          @unique
  password      String
  role          String          @default("USER")
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  watchlist     WatchlistItem[]
  history       HistoryItem[]
  notifications Notification[]
}

model WatchlistItem {
  id          String   @id @default(cuid())
  userId      String
  tmdbId      Int
  title       String
  posterPath  String?
  mediaType   String
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, tmdbId, mediaType])
}

model HistoryItem {
  id          String   @id @default(cuid())
  userId      String
  tmdbId      Int
  title       String
  posterPath  String?
  mediaType   String
  lastWatched DateTime @default(now())
  progress    Int      @default(0) // For "continue watching"

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, tmdbId, mediaType])
}

model MediaContent {
  id            Int      @id // TMDB ID
  title         String
  overview      String?
  posterPath    String?
  backdropPath  String?
  mediaType     String   // "movie" or "tv"
  releaseDate   String?
  voteAverage   Float?
  popularity    Float?
  genreIds      String?  // Stored as JSON string e.g. "[18, 28]"
  isVisible     Boolean  @default(true)
  isFeatured    Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([mediaType])
  @@index([popularity])
}

model GlobalSettings {
  id              Int      @id @default(1)
  siteName        String   @default("ShqipFlix")
  supportEmail    String   @default("support@shqipflix.vip")
  maintenanceMode Boolean  @default(false)
  updatedAt       DateTime @updatedAt
}

model Notification {
  id        String   @id @default(cuid())
  userId    String?  // Null for mass notifications
  title     String
  message   String
  type      String   @default("INFO") // INFO, WARNING, SUCCESS, ERROR
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([createdAt])
}

model CryptoAddress {
  id        String   @id @default(cuid())
  name      String   // e.g. Bitcoin
  symbol    String   // e.g. BTC
  address   String
  network   String?  // e.g. ERC20, BEP20
  isVisible Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([name])
}

model LiveChannel {
  id          String   @id @default(cuid())
  name        String
  category    String
  streamUrl   String
  isIframe    Boolean  @default(true)
  logo        String?
  userAgent   String?
  referer     String?
  isVisible   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
}
