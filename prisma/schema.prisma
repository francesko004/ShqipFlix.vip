// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(cuid())
  username      String          @unique
  password      String
  role          String          @default("USER")
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  watchlist     WatchlistItem[]
  history       HistoryItem[]
  notifications Notification[]
  reviews       Review[]
  requests      MovieRequest[]
  episodeHistory EpisodeHistory[]
  genreInterests UserGenreInterest[]
}

model UserGenreInterest {
  id        String   @id @default(cuid())
  userId    String
  genreId   Int
  count     Int      @default(1)
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, genreId])
  @@index([userId])
}

model EpisodeHistory {
  id        String   @id @default(cuid())
  userId    String
  tvId      Int
  season    Int
  episode   Int
  watchedAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, tvId, season, episode])
  @@index([userId, tvId])
}

model WatchlistItem {
  id          String   @id @default(cuid())
  userId      String
  tmdbId      Int
  title       String
  posterPath  String?
  mediaType   String
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, tmdbId, mediaType])
}

model HistoryItem {
  id          String   @id @default(cuid())
  userId      String
  tmdbId      Int
  title       String
  posterPath  String?
  mediaType   String
  lastWatched DateTime @default(now())
  progress    Int      @default(0) // For "continue watching"

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, tmdbId, mediaType])
}

model MediaContent {
  id            Int      @id // TMDB ID
  title         String
  overview      String?
  posterPath    String?
  backdropPath  String?
  mediaType     String   // "movie" or "tv"
  releaseDate   String?
  voteAverage   Float?
  popularity    Float?
  genreIds      String?  // Stored as JSON string e.g. "[18, 28]"
  isVisible     Boolean  @default(true)
  isFeatured    Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([mediaType])
  @@index([popularity])
}

model GlobalSettings {
  id              Int      @id @default(1)
  siteName        String   @default("ShqipFlix")
  siteDescription String   @default("Platforma lider shqiptare pÃ«r transmetimin e filmave, serialeve dhe kanaleve Live TV.")
  supportEmail    String   @default("support@shqipflix.vip")
  logoUrl         String?
  adFrequency     Int      @default(30) // Minutes between ads
  maintenanceMode Boolean  @default(false)
  updatedAt       DateTime @updatedAt
}

model Notification {
  id        String   @id @default(cuid())
  userId    String?  // Null for mass notifications
  title     String
  message   String
  type      String   @default("INFO") // INFO, WARNING, SUCCESS, ERROR
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([createdAt])
}

model CryptoAddress {
  id        String   @id @default(cuid())
  name      String   // e.g. Bitcoin
  symbol    String   // e.g. BTC
  address   String
  network   String?  // e.g. ERC20, BEP20
  isVisible Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([name])
}

model LiveChannel {
  id          String   @id @default(cuid())
  name        String
  category    String
  streamUrl   String
  isIframe    Boolean  @default(true)
  logo        String?
  userAgent   String?
  referer     String?
  isVisible   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
}

model Review {
  id        String   @id @default(cuid())
  userId    String
  tmdbId    Int
  mediaType String   // "movie" or "tv"
  rating    Int      // 1-5 stars
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, tmdbId, mediaType])
  @@index([tmdbId, mediaType])
}

model MovieRequest {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  status      String   @default("PENDING") // PENDING, APPROVED, REJECTED, ADDED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([status])
  @@index([createdAt])
}

model BumperAd {
  id           String   @id @default(cuid())
  advertiser   String   // Business name
  contactEmail String
  mediaUrl     String   // Video or image URL
  clickUrl     String?  // Where to redirect on click
  duration     Int      @default(5) // Seconds
  impressions  Int      @default(0)
  clicks       Int      @default(0)
  isActive     Boolean  @default(false) // Admin approval required
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([isActive])
}

model Genre {
  id       Int    @id // TMDB genre ID
  name     String
  slug     String @unique
  
  @@index([slug])
}

